#lang racket

;; A Node is:
;;   - empty (null), or
;;   - (mcons X node)

(define sample-list (mcons 1 (mcons 2 (mcons 3 '()))))

; Node -> Node
; given a singly linked list, returns the same list with pointers reversed
(define (reverse list)

  ; Node Node -> Node (Reversed)
  ; helper accumulator with mutation
  (define (loop l prev)
    (cond [(null? l) prev] ; return the head
          [else (let* ((curr (mcar l))
                      (next (mcdr l))
                      )
                  (set-mcdr! l prev)
                  (loop next l)
                  ) ])
    )
  ; initializt loop with '() prev
  (loop list '())

  
  )
(reverse sample-list) ; should return '(3 2 1)