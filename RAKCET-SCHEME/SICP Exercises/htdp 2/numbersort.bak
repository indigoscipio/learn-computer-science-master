; Number List Of Numbers (Sorted) -> List Of Numbers (Sorted)
(define (insert-num n s-lon)
  ;if the sorted list is empty, return a list with the element
  ;if the elemnt is smaller than the first element, add it to the front
  ;else recurse and insert it into the front of the rest the the sorted list
  (cond [(empty? s-lon) (cons n '())]
        [(< n (first s-lon)) (cons n s-lon)]
        [else (cons (first s-lon) (insert-num n (rest s-lon)) ) ])
 )
 ;(insert-num (first s-lon) (rest (cons n (rest s-lon))))
;(insert-num 999 (list 1 2 3))


; List-of-Numbers (Unsorted) -> List-of-numbers (Sorted)
(define (sort-num lon)
  (cond [(empty? lon) '()]
        [else (insert-num (first lon) (sort-num (rest lon)))])
  )
(sort-num (list  0 -55 44 1 -1))