;function sum consumes a list of posns
;and produces the sum of all of its x-coordinates
; List-of-posns -> Number
; List-of-posns is the following:
; '() - an empty list
; Posn List-of-posns

(define empty-posn '() )
(define sample-posn1 (cons (make-posn 1 2) (cons (make-posn 3 4) '())))
(define sample-posn2 (cons (make-posn 1 2) (cons (make-posn 3 4) (cons (make-posn 5 6) '()))))




(define (sum lop)
  (cond [(empty? lop) 0]
        [else (+ (posn-x (first lop)) (sum (rest lop)) )   ]
        ) 
  )

(sum sample-posn1)
(sum sample-posn2)

(check-expect (sum sample-posn) 4)