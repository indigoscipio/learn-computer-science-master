; a plain background image 
(define MT (empty-scene 50 50))
(define LINE-COLOR "red")
(define tri-posn1 (make-posn 20 10))
(define tri-posn2 (make-posn 20 20))
(define tri-posn3 (make-posn 30 20))
(define sample-tri (list tri-posn1 tri-posn2 tri-posn3) )
(define sample-tri2 (list tri-posn1 tri-posn2))

(define rec-posn1 (make-posn 20 10))
(define rec-posn2 (make-posn 20 20))
(define rec-posn3 (make-posn 30 20))
(define rec-posn4 (make-posn 40 50))
(define sample-rec (list rec-posn1 rec-posn2 rec-posn3 rec-posn4) )


;render-line draws a red line from posn p to posn q into img
; Image Posn Posn -> Image
(define (render-line img p q)
  (scene+line img (posn-x p) (posn-y p) (posn-x q) (posn-y q) LINE-COLOR)
  )
(render-line MT tri-posn1 tri-posn2)


; Image Polygon -> Image
; renders the given polygon p into img
(define (render-poly img p)
  (cond
    [(empty? (rest (rest (rest p))))
     (render-line
      (render-line
       (render-line img (first p) (second p))
      (second p) (third p))
      (third p) (first p))
     ] 
    [else (render-line (render-poly img (rest p))
                       (first p) (second p)) ])
  )
;(render-poly MT sample-tri)
;(render-poly MT sample-rec)

; An NELoP is one of: 
; – (cons Posn '())
; – (cons Posn NELoP)



; Image NELoP -> Image 
; connects the dots in p by rendering lines in img
(define (connect-dots img p)
  (scene+line img )
  )
(connect-dots MT sample-tri)
(check-expect (connect-dots MT sample-tri2)
              (scene+line
               (scene+line MT 20 10 20 20 "red")
               20 20 30 20 "red"))