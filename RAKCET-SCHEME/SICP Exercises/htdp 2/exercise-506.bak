; Number -> Boolean
; checks wheter a given number n is a prime
(define (is-prime? n)
  (local (; Number List-of-numbers -> Boolean
          (define (is-prime?/a n acc)
            (cond [(<= n 1) #f]
                  [(= n 2)  #t]
                  [(= acc 2) #t]
                  [(zero? (remainder n acc)) #f]
                  [else (is-prime?/a n (sub1 acc) ) ] ;check for divisibility
                  )
            )
          )
    (is-prime?/a n (- n 1)) 
    )
  )
(is-prime? 7)
(is-prime? 1)
(is-prime? 3)
(is-prime? 2)