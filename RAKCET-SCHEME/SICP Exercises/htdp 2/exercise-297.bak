;Exercise 295. Develop n-inside-playground?, a specification of the random-posns function below.
;The function generates a predicate that ensures that the length of the given list is some given count and
;that all Posns in this list are within a WIDTH by HEIGHT rectangle:
; distances in terms of pixels 
(define WIDTH 300)
(define HEIGHT 300)
 
; N -> [List-of Posn]
; generates n random Posns in [0,WIDTH) by [0,HEIGHT)
(define (random-posns n)
  (build-list
   n
   (lambda (i)
     (make-posn (random WIDTH) (random HEIGHT)))))
(random-posns 8)

; [List-of-Posn] -> Predicate
(define (n-inside-playground? n)
  (lambda (result)
    ;ensure the iteam quantity in result has the same amount with n
    ;ensure each posn does not exceed width and height
    (and (equal? (length result) n)
         (andmap (lambda (i) (and (< (posn-x i) WIDTH)
                                 (< (posn-y i) HEIGHT)))
                 result ) )
    )
  )

(check-satisfied (random-posns 3)
                 (n-inside-playground? 3))
