;Exercise 294. Develop is-index?, a specification for index:
; [X] X [List-of X] -> [Maybe N]
; determine the index of the first occurrence
; of x in l, #false otherwise
(define (index x l)
  (cond
    [(empty? l) #false]
    [else (if (equal? (first l) x)
              0
              (local ((define i (index x (rest l))))
                (if (boolean? i) i (+ i 1))))]))

;Use is-index? to formulate a check-satisfied test for index.
; X [List-of-X] -> X [List-of-X] -> Boolean 
(define (is-index? x l)
  (lambda (result)
    ;if the result returns false, x must not be in the list
    (cond [(false? result) (not (member? x l))]
          ;if x occurs multiple times in result, return the index of the first occurence
          [else (and (equal? (list-ref l result) x) (= result (index x l))) ]
          )
    )
  )
