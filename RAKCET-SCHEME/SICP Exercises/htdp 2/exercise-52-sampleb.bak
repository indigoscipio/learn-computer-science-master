; A WorldState is a Number.
; interpretation number of pixels between the top and the UFO
 
(define WIDTH 300) ; distances in terms of pixels 
(define HEIGHT 100)
(define CLOSE (/ HEIGHT 3))
(define MTSCN (empty-scene WIDTH HEIGHT)) ; short for empty scene

(define STATUS-LINE (rectangle 30 2 "solid" "red"))
(define (STATUS-TEXT text-input text-color) (text text-input 12 text-color))

(define (UFO text-input text-color) (overlay/align "middle" "bottom"
             (STATUS-TEXT text-input text-color)         
             (rectangle 50 10 "solid" "black")
             (circle 10 "solid" "green")
             
             ))


; WorldState -> WorldState
(define (main y0)
  (big-bang y0
     [on-tick nxt]
     [to-draw render]))
 
; WorldState -> WorldState
; computes next location of UFO 
(define (nxt y)
  (if (>= y (- HEIGHT 10)) ; Limit descent to bottom of canvas
      y
      (+ y 3))) ; Move 3 pixels down per tick
 
; WorldState -> ImageZ
; top = 0, bottom = 90
; if it's less than or equal to CLOSE (33), render "descending"
; if it's more than CLOSE and less than 90 (bottom), render "closing in"
; at the bottom (more than or equal to 90), the status is "landed"
(define (render y)
  (cond [(<= y CLOSE) (place-image (UFO "descending..." "red") (/ WIDTH 2) y MTSCN) ]
        [(and (>= y CLOSE) (< y 90)) (place-image (UFO "closing in..." "yellow") (/ WIDTH 2) y MTSCN)  ]
        [else (place-image (UFO "landed" "green") (/ WIDTH 2) y MTSCN)]
        )
  
  )


(main 0)