; A Shape is a function:
;   [Posn -> Boolean]
; interpretation: if s is a shape and p is a Posn, (s p)
; produces #true if p is in s, #false otherwise.


; Shape Posn -> Boolean
(define (inside? s p)
  (s p))

; Number Number -> Shape
(define (mk-point x y)
  (lambda (p)
    (and (= (posn-x p) x) (= (posn-y p) y))))

(define a-sample-shape (mk-point 3 4))
(inside? a-sample-shape (make-posn 3 6))

(define (mk-circle center-x center-y r)
  ; [Posn -> Boolean]
  (lambda (p)
    (<= (distance-between center-x center-y p) r)))

; Number Number Posn -> Boolean
(define (distance-between x y p)
  (sqrt (+ (expt (- x (posn-x p)) 2) 
           (expt (- y (posn-y p)) 2))))
(distance-between 3 4 (make-posn 0 0)) 
