(define-struct movie [title director year])

(define sample-movie-1 
(make-movie "Movie Title" "Director Name" 2015))

(define (movie-template m)
  (string-append 
    "This " 
    (movie-title m) 
    " is made by " 
    (movie-director m) 
    " in " 
    (number->string (movie-year m)) 
    "."))
  
(movie-template sample-movie-1)


; A pet is a structure
; make-pet (String Number)
(define-struct pet [name number])
(define pet-sample1 (make-pet "Akebi" 55))


; a pet tempalte function
; Pet -> String
(define (pet-template p)
  (string-append
   "This pet is named "
   (pet-name p)
   ", and it's tag number is "
   (number->string (pet-number p))
   )
  )
(pet-template pet-sample1)



(define-struct CD [artist title price])
(define CD-sample1 (make-CD "Xtal" "TITLE" 482))
(define (CD-template cd)
  (string-append
   "Artist: "
   (CD-artist cd)
   " Title: "
   (CD-title cd)
   " Price: "
   (number->string (CD-price cd))
  
   )
  )
(CD-template CD-sample1)
