(define WIDTH-OF-WORLD 200)
(define HEIGHT-OF-WORLD 50)
 
(define WHEEL-RADIUS 5)
(define WHEEL-DISTANCE (* WHEEL-RADIUS 5))

(define WHEEL
  (circle WHEEL-RADIUS "solid" "black")
  )

(define SPACE
  (rectangle (* WHEEL-RADIUS 5) 10  "solid" "white")
  )

(define WHEELS
  (beside WHEEL
          SPACE
          WHEEL)
  )


(define BACKGROUND
  (rectangle WIDTH-OF-WORLD 55 "outline" "black"))


(place-image WHEELS 0 0 BACKGROUND)

(define (render x)
  BACKGROUND)

(define (tock x)
  x)

(define (main ws)
   (big-bang ws
     [on-tick tock]
     [to-draw render]))

