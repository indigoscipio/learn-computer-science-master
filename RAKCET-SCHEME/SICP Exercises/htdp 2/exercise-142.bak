;function cat consumes a list of strings and appends them all into one long string
; List-of-string -> String
; concatenates all strings in l into one long string
(define sample-los (cons "a" (cons "b" (cons "c" '()))) )

(define (cat los)
  ; if its empty, return empty string""
  (cond [(empty? los) ""]
        ; if its a list, check the first and concatenate with the next one
        ; if theres no more next list, return the final value
        [(cons? los) (string-append (first los) (cat (rest los))) ]
        
        )
  )
(cat sample-los)

