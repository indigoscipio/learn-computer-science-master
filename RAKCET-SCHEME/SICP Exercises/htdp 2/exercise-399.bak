;Design value. The function consumes two equally long lists:
;a linear combination and a list of variable values.
;It produces the value of the combination for these values.
(define sample-list1 (list 5 17 3))
(define sample-list2 (list 10 1 2))

; List-of-Number List-of-Number -> Number
; multiplies each coefficient by its corresponding variable value and sums everything
(define (value l1 l2)
  (cond [(empty? l1) 0]
        [else (+ (* (first l1) (first l2))
                 (value (rest l1) (rest l2)) ) ])
  )
(check-expect (value sample-list1 sample-list2) 73)
(check-expect (value (list 5) (list 10)) 50)
(check-expect (value (list) (list)) 0)
