(define sample-list (list "a" "b" "c" "d" "e" "f" "g" "h"))


; [List-of 1String] N -> [List-of String]
; bundles chunks of s into strings of length n
(define (bundle s n)
  (cond [(or (empty? s) (zero? n)) '()]
        [else (cons (implode (take s n))
                    (bundle (drop s n) n))]
        )
  ; Base case: If list is empty, return an empty list
  ; Take the first `n` elements, turn them into a string
  ; Recursively process the rest
  )

; [List-of X] N -> [List-of X]
; keeps the first n items from l if possible or everything
(define (take l n)
  (cond [(zero? n) '()]
        [(empty? l) '()]
        [else (cons (first l)
                    (take (rest l) (sub1 n))) ])
  )


; [List-of X] N -> [List-of X]
; removes the first n items from l if possible or everything
(define (drop l n)
  (cond [(zero? n) l] ; stop dropping
        [(empty? l) l]
        [else (drop (rest l) (sub1 n)) ]
        )
  )

(bundle sample-list 1)
(bundle sample-list 2)
(check-expect (bundle (explode "abcdefg") 3)
              (list "abc" "def" "g"))
(check-expect (bundle '("a" "b") 3) (list "ab"))
