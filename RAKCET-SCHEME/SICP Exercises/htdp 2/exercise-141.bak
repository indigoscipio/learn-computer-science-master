;all true is a function that consumes a list of boolean
;and determines if all of them are true
; if there is any false on the list, the function produces false
; List-of-boolean -> Boolean
(define empty-lob '())
(define sample-lob (cons #false (cons #false (cons #false '()))))

(define (all-true? lob)
  (cond 
    [(empty? lob) #true] ; Base case: An empty list means all are true
    [(false? (first lob)) #false] ; If the first element is false, return #false
    [else (all-true? (rest lob))])) ; Recursively check the rest of the list

(all-true? empty-lob)


;one-true is a function that consumes a list of boolean
;and determines wheter at least one item on the list is true
;List-of-boolean -> Boolean
(define (one-true? lob)
  (cond [(empty? lob) #false]
        ; if one of the item is true, stop and return true
        [(equal? (first lob) #true) #true ]
        ;otherwise loop
        [else (one-true? (rest lob))] )
  )
(one-true? sample-lob)