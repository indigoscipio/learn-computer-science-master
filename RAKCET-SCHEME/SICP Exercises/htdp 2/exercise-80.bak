(define-struct r3 [x y z])
; An R3 is a structure to store 3d points in xyz axis
;   (make-r3 Number Number Number)
 
(define ex1 (make-r3 1 2 13))
(define ex2 (make-r3 -1 0 3))

; r3-distance-to-0: r3 -> Number
; Purpose: Compute the distance of a point in 3-dimensional space to the origin
; purpose to compute the distance of objects in a 3 dimensional space to origin

(define (  r3-distance-to-0 point)
  (sqrt (+ (expt (r3-x point) 2) (expt (r3-y point) 2) (expt (r3-z point) 2)) ) 
  )
