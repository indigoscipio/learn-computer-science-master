(define (copier n s)
  (cond [(zero? n) '()]
        [(positive? n) (cons s (copier (sub1 n) s) ) ])
  )



;add-to-pi consumes a natural number n
; and ands it to pi without using the primitive + operation
; N -> Number
; computes (+ n pi) without using +

(define (add-to-pi n)
  (cond [(zero? n) pi]
        [(positive? n) (add1 (add-to-pi (sub1 n)))])
  )

(add-to-pi 44)